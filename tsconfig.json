{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "isolatedModules": false,
    "removeComments": false,
    "noImplicitAny": false,
    "baseUrl": "."
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts"
  ],
  "compileOnSave": false,
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit": true
  }
}
